<%= simple_form_for @server do |f| %>

  <%= f.input :name, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>

  <%= f.input :url, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>

  <%= f.input :user, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'},
  						:hint_html => { :class => 'col-md-offset-1' }%>

  <%= f.input :password, as: :password,
              :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'},
  						:hint_html => { :class => 'col-md-offset-1' }%>

  <%= f.input :password_confirmation, as: :password,
              :label_html => { :class => 'col-md-offset-1' }, 
              :input_html => {:class => 'col-md-offset-1'},
              :hint_html => { :class => 'col-md-offset-1' }%>

  <%= f.input :description, as: :text, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1', :cols => 50, :rows =>3}%>
<br>
  <%= f.button :submit, :class => 'col-md-offset-1 btn btn-warning' %> 

  <% if @edit %>
    <%= link_to "<i class='glyphicon glyphicon-trash white-icon'></i> #{t('server.delete')}".html_safe,
                server_path(@server),
                :class => 'col-md-offset-1 btn btn-danger',
                :type => 'submit',
                :method => :delete
    %>
  <% end %>
<% end %>
