<% title t('server.new'), :show_title => false %>
<%= simple_form_for @server, :url => root_path, :default => {:input_html => { :class => 'col-md-offset-1' }}  do |f| %>
  <%= f.input :name, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>
  <%= f.input :url, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'}%>
  <%= f.input :user, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'},
  						:hint_html => { :class => 'col-md-offset-1' }%>
  <%= f.input :password, as: :password, :label_html => { :class => 'col-md-offset-1' }, 
  						:input_html => {:class => 'col-md-offset-1'},
  						:hint_html => { :class => 'col-md-offset-1' }%>
  <%= f.input :description, as: :text, :label_html => { :class => 'col-md-offset-1', :cols => 50 }, 
  						:input_html => {:class => 'col-md-offset-1'}%>
  <%= f.button :submit, :class => 'col-md-offset-1 btn btn-warning' %>
<% end %>