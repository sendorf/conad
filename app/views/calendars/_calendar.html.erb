<div id="calendar">
  <h2 id="month">

    <%= link_to "<i class='glyphicon glyphicon-plus white-icon'></i>
                #{t('calendar_title.create_server')}".html_safe,
                new_server_path,
                :class => 'btn btn-warning',
                :type => 'button',
                :icon => 'icon-plus',
                :title => t('calendar_title.create_server'),
    %>
    <%= link_to "<i class='glyphicon glyphicon-arrow-left'></i>".html_safe, 
                     {:month => (@date.beginning_of_month-1).strftime("%Y-%m-%d")},
                     {:title => t('calendar_title.previous_month'),
                      :class => 'col-md-offset-1' } %>
    <% trans_month = @date.strftime("%B")%>
    <%=h( t('month.'+@date.strftime("%B")) + ' ' + @date.strftime("%Y")) %>
    <%= link_to "<i class='glyphicon glyphicon-arrow-right'></i>".html_safe,
                      {:month => (@date.end_of_month+1).strftime("%Y-%m-%d")}, 
                      {:title => t('calendar_title.next_month')} %>
    <% if @server %>
      <%= link_to "<i class='glyphicon glyphicon-wrench white-icon'></i>
                  #{t('calendar_title.edit_server')}".html_safe,
                  edit_server_path(@server),
                  :class => 'btn btn-warning col-md-offset-1',
                  :type => 'button',
                  :title => t('calendar_title.edit_server')
      %>
    <% else %>
      <%= link_to "<i class='glyphicon glyphicon-plus white-icon'></i>
                  #{t('calendar_title.create_server')}".html_safe,
                  new_server_path,
                  :class => 'btn btn-warning col-md-offset-1',
                  :type => 'button',
                  :title => t('calendar_title.create_server'),
      %>
    <% end %>
  </h2>
  <div id="not_calendar">
  </div>
  <%= calendar_for @connections, :year => @date.year, :month => @date.month, 
                                 :html =>{:class=>'table table-hover col-md-offset-1'}, 
                                 :first_day_of_week => 1  do |calendar| %>
    <%= calendar.head(t('week_day.Monday'),t('week_day.Tuesday'),t('week_day.Wednesday'),t('week_day.Thursday'),
                      t('week_day.Friday'), t('week_day.Saturday'), t('week_day.Sunday'),) %>
    <%= calendar.day(:day_method => :start_time) do |date, connections| %>
      <%= date.day %>
      <% if @server && connections %>
        <ul>
          <% connections.first(3).each do |connection| %>
            <li><%= connection.user %></li>
          <% end %>
          <% if connections.length >= 4 %>
            <li>...</li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  <% end %>
</div>