<% title t('calendar'), :show_title => false %>

<%= content_tag :button, id: 'line', class: "chart-button col-md-offset-1"  do %>
  <%= t('home.lines')%>
<% end %>

<%= content_tag :button, id: 'stackedbar', class: "chart-button col-md-offset-1"  do %>
  <%= t('home.stackedBars')%>
<% end %>

<%= content_tag :button, id: 'donut', class: "chart-button col-md-offset-1"  do %>
  <%= t('home.donut')%>
<% end %>

<%= content_tag :svg, class: "transition col-md-offset-1", 
                      data: {chart: Connection.chart_format_month_connections(@date)} do %>
<% end %>

<%= render 'calendar' %>
